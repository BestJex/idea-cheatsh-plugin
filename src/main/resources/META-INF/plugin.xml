<idea-plugin>
    <id>pl.szymonprz.idea-cheatsh-plugin</id>
    <name>cheat.sh code snippets</name>
    <vendor email="szymon.przebierowski@gmail.com">Szymon Przebierowski</vendor>

    <description><![CDATA[
    Plugin for loading code snippets from cheat.sh directly to editor without need to switch your mental context
    ]]></description>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="pl.szymonprz.cheatsh.plugin.model.Storage"/>
        <projectConfigurable id="settings.cheatsh" instance="pl.szymonprz.cheatsh.plugin.ui.Configuration"/>
    </extensions>

    <actions>
        <action id="IdeaCheatshPlugin.pl.szymonprz.cheatsh.plugin.action.ReplaceQuestionWithAnswerAction" class="pl.szymonprz.cheatsh.plugin.action.ReplaceQuestionWithAnswerAction" text="Find snippet" description="Loads answers">
            <add-to-group group-id="EditorPopupMenu1.FindRefactor" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt C" second-keystroke="S"/>
        </action>
        <action id="PreviewAnswers" class="pl.szymonprz.cheatsh.plugin.action.PreviewAnswers" text="Preview answers"
                description="Preview multiple answers">
            <keyboard-shortcut keymap="$default" first-keystroke="alt P"/>
        </action>
    </actions>
    <version>1.0.2-SNAPSHOT</version>
    <idea-version since-build="162"/>
</idea-plugin>