<idea-plugin>
    <id>pl.szymonprz.intellij-cheatsh-plugin</id>
    <name>cheat.sh support</name>
    <vendor email="szymon.przebierowski@gmail.com">Szymon Przebierowski</vendor>

    <description><![CDATA[
    Plugin for loading code snippets from cheat.sh
    ]]></description>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="IntellijCheatshPlugin.pl.szymonprz.cheatsh.plugin.action.ReplaceQuestionWithAnswerAction" class="pl.szymonprz.cheatsh.plugin.action.ReplaceQuestionWithAnswerAction" text="Find snippet" description="Loads answerts">
            <add-to-group group-id="EditorPopupMenu1.FindRefactor" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt C" second-keystroke="S"/>
        </action>
    </actions>
    <version>0.0.1</version>
</idea-plugin>